<% content_for :title, "生徒ダッシュボード" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- ヘッダー -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            生徒ダッシュボード
          </h1>
          <p class="mt-2 text-gray-600">
            こんにちは、<span class="font-medium text-blue-600"><%= @student.name %></span>さん
            <span class="text-sm text-gray-500">
              （生徒番号: <%= @student.student_number %>）
            </span>
          </p>
          <% if @campus %>
          <p class="text-sm text-gray-500">
            所属校舎: <span class="font-medium"><%= @campus.name %></span>
          </p>
          <% end %>
        </div>
        <div class="flex items-center space-x-4">
          <%= button_to "ログアウト", student_logout_path, 
                        method: :delete,
                        class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer border-0",
                        data: { turbo_confirm: "ログアウトしますか？" } %>
        </div>
      </div>
    </div>

    <!-- 統計カード -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  利用可能講師数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @teachers_count %>名
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  現在の予約数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @total_appointments_count %>件
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0H3m0 0h2M9 7h6m-6 4h6m-2 6l-3.5-3.5L9 16"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  校舎数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @campuses_count %>校舎
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- メニューカード -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">面談予約</h3>
              <p class="text-sm text-gray-500">講師との面談を予約する</p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to student_teachers_path, class: "text-blue-600 hover:text-blue-500 text-sm font-medium" do %>
            予約画面へ →
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">予約確認</h3>
              <p class="text-sm text-gray-500">現在の予約状況を確認</p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to student_appointments_list_path, class: "text-green-600 hover:text-green-500 text-sm font-medium" do %>
            確認画面へ →
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-yellow-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">予約変更</h3>
              <p class="text-sm text-gray-500">予約の変更・キャンセル</p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to student_appointments_list_path, class: "text-yellow-600 hover:text-yellow-500 text-sm font-medium" do %>
            変更画面へ →
            <% end %>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-indigo-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">講師一覧</h3>
              <p class="text-sm text-gray-500">面談可能な講師を確認</p>
            </div>
          </div>
          <div class="mt-4">
            <%= link_to student_teachers_path, class: "text-indigo-600 hover:text-indigo-500 text-sm font-medium" do %>
            講師一覧へ →
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- 今後の予約一覧 -->
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">今後の面談予定</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <% if @upcoming_appointments.any? %>
          <% @upcoming_appointments.each do |appointment| %>
          <div class="px-6 py-4">
            <div class="flex items-center justify-between">
              <div class="flex items-center">
                <div class="flex-shrink-0">
                  <div class="w-10 h-10 bg-blue-500 rounded-full flex items-center justify-center">
                    <span class="text-white font-medium text-sm">
                      <%= appointment.time_slot.teacher.name.first %>
                    </span>
                  </div>
                </div>
                <div class="ml-4">
                  <div class="text-sm font-medium text-gray-900">
                    <%= appointment.time_slot.teacher.name %>先生
                  </div>
                  <div class="text-sm text-gray-500">
                    <%= appointment.time_slot.date.strftime('%Y年%m月%d日') %>
                    <%= appointment.time_slot.start_time.strftime('%H:%M') %>〜
                    <span class="ml-2 text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">
                      <%= appointment.time_slot.campus.name %>
                    </span>
                  </div>
                </div>
              </div>
              <div class="text-sm text-gray-500">
                <% if appointment.cancellable? %>
                <span class="text-green-600">変更可能</span>
                <% else %>
                <span class="text-red-600">変更不可</span>
                <% end %>
              </div>
            </div>
          </div>
          <% end %>
          <% else %>
          <div class="px-6 py-8 text-center">
            <div class="text-gray-500">
              <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
              </svg>
              <p class="mt-2 text-sm">予約はありません</p>
              <p class="text-xs text-gray-400 mt-1">講師一覧から面談を予約してください</p>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- 過去の面談履歴 -->
    <% if @past_appointments.any? %>
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">過去の面談履歴</h2>
        </div>
        <div class="divide-y divide-gray-200">
          <% @past_appointments.each do |appointment| %>
          <div class="px-6 py-4">
            <div class="flex items-center">
              <div class="flex-shrink-0">
                <div class="w-10 h-10 bg-gray-500 rounded-full flex items-center justify-center">
                  <span class="text-white font-medium text-sm">
                    <%= appointment.time_slot.teacher.name.first %>
                  </span>
                </div>
              </div>
              <div class="ml-4">
                <div class="text-sm font-medium text-gray-900">
                  <%= appointment.time_slot.teacher.name %>先生
                </div>
                <div class="text-sm text-gray-500">
                  <%= appointment.time_slot.date.strftime('%Y年%m月%d日') %>
                  <%= appointment.time_slot.start_time.strftime('%H:%M') %>〜
                  <span class="ml-2 text-xs bg-gray-100 text-gray-800 px-2 py-1 rounded">
                    <%= appointment.time_slot.campus.name %>
                  </span>
                </div>
              </div>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>