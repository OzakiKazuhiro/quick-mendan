<% content_for :title, "ダッシュボード" %>

<div class="min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- ヘッダー -->
    <div class="mb-8">
      <div class="flex justify-between items-center">
        <div>
          <h1 class="text-3xl font-bold text-gray-900">
            ダッシュボード
          </h1>
          <p class="mt-2 text-gray-600">
            ようこそ、<span class="font-medium text-blue-600"><%= @current_user.name %></span>さん
            <span class="text-sm text-gray-500">
              （<%= @is_admin ? '管理者' : '講師' %>）
            </span>
          </p>
        </div>
        <div class="flex items-center space-x-4">
          <%= button_to "ログアウト", staff_logout_path, 
                        method: :delete,
                        class: "bg-red-600 hover:bg-red-700 text-white px-4 py-2 rounded-md text-sm font-medium transition-colors cursor-pointer border-0",
                        data: { confirm: "ログアウトしますか？" } %>
        </div>
      </div>
    </div>

    <!-- 統計カード -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-8">
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-blue-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  生徒数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @students_count %>名
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>

      <% if @is_admin %>
      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-green-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  講師数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @teachers_count %>名
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
      <% end %>

      <div class="bg-white overflow-hidden shadow rounded-lg">
        <div class="p-5">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-8 h-8 bg-purple-500 rounded-md flex items-center justify-center">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-4m-5 0H9m0 0H5m0 0H3m0 0h2M9 7h6m-6 4h6m-2 6l-3.5-3.5L9 16"></path>
                </svg>
              </div>
            </div>
            <div class="ml-5 w-0 flex-1">
              <dl>
                <dt class="text-sm font-medium text-gray-500 truncate">
                  校舎数
                </dt>
                <dd class="text-lg font-medium text-gray-900">
                  <%= @campuses_count %>校舎
                </dd>
              </dl>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- メニューカード -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-blue-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">面談枠設定</h3>
              <p class="text-sm text-gray-500">面談可能な時間枠を設定</p>
            </div>
          </div>
          <div class="mt-4">
            <a href="#" class="text-blue-600 hover:text-blue-500 text-sm font-medium">
              設定画面へ →
            </a>
          </div>
        </div>
      </div>

      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-green-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">予約管理</h3>
              <p class="text-sm text-gray-500">面談予約の確認・管理</p>
            </div>
          </div>
          <div class="mt-4">
            <a href="#" class="text-green-600 hover:text-green-500 text-sm font-medium">
              管理画面へ →
            </a>
          </div>
        </div>
      </div>

      <% if @is_admin %>
      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-yellow-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">システム管理</h3>
              <p class="text-sm text-gray-500">講師・生徒・校舎の管理</p>
            </div>
          </div>
          <div class="mt-4">
            <a href="#" class="text-yellow-600 hover:text-yellow-500 text-sm font-medium">
              管理画面へ →
            </a>
          </div>
        </div>
      </div>
      <% end %>

      <div class="bg-white overflow-hidden shadow rounded-lg hover:shadow-lg transition-shadow">
        <div class="p-6">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <div class="w-10 h-10 bg-indigo-500 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                </svg>
              </div>
            </div>
            <div class="ml-4">
              <h3 class="text-lg font-medium text-gray-900">面談記録</h3>
              <p class="text-sm text-gray-500">面談内容の記録・管理</p>
            </div>
          </div>
          <div class="mt-4">
            <a href="#" class="text-indigo-600 hover:text-indigo-500 text-sm font-medium">
              記録画面へ →
            </a>
          </div>
        </div>
      </div>
    </div>

    <!-- 今日の予定（今後実装予定） -->
    <div class="mt-8">
      <div class="bg-white shadow rounded-lg">
        <div class="px-6 py-4 border-b border-gray-200">
          <h2 class="text-lg font-medium text-gray-900">今日の予定</h2>
        </div>
        <div class="p-6">
          <p class="text-gray-500 text-center py-8">
            予約機能実装後に表示されます
          </p>
        </div>
      </div>
    </div>
  </div>
</div>