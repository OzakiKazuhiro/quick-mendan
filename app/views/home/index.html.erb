<!-- ヒーローセクション -->
<section class="relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12 lg:py-20">
    <div class="text-center">
      <!-- メインタイトル -->
      <h1 class="text-4xl lg:text-6xl font-bold text-gray-900 mb-6">
        <span class="bg-gradient-to-r from-blue-600 to-indigo-600 bg-clip-text text-transparent">
          Quick Mendan
        </span>
      </h1>

      <!-- サブタイトル -->
      <p class="text-xl lg:text-2xl text-gray-600 mb-8 max-w-3xl mx-auto">
        個人面談の予約が<span class="font-semibold text-blue-600">簡単・スピーディー</span>に！<br>
        スマホでサクッと予約、変更もラクラク 📱✨
      </p>

      <!-- CTA ボタン -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-12">
        <%= link_to student_session_path, class: "bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-4 px-8 rounded-xl text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
        🎯 学生ログイン
        <% end %>
        <%= link_to staff_login_path, class: "bg-white hover:bg-gray-50 text-gray-700 font-semibold py-4 px-8 rounded-xl text-lg border-2 border-gray-200 hover:border-green-300 transition-all duration-300" do %>
        👨‍🏫 講師ログイン
        <% end %>
      </div>

      <!-- 装飾的な要素 -->
      <div class="relative">
        <div class="absolute inset-0 flex items-center justify-center">
          <div class="w-64 h-64 bg-gradient-to-r from-blue-400 to-indigo-400 rounded-full opacity-10 animate-pulse"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- 使い方セクション -->
<section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">
        使い方はとっても簡単！
      </h2>
      <p class="text-lg text-gray-600">
        3ステップで面談予約完了 🎉
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- ステップ1 -->
      <div class="text-center">
        <div class="w-20 h-20 bg-gradient-to-r from-blue-500 to-indigo-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
          1
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">生徒番号を入力</h3>
        <p class="text-gray-600">
          あなたの生徒番号とパスワード（9999）を入力してログイン
        </p>
      </div>

      <!-- ステップ2 -->
      <div class="text-center">
        <div class="w-20 h-20 bg-gradient-to-r from-green-500 to-emerald-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
          2
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">日時を選択</h3>
        <p class="text-gray-600">
          空いている時間から好きな日時を選んでクリック
        </p>
      </div>

      <!-- ステップ3 -->
      <div class="text-center">
        <div class="w-20 h-20 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-2xl font-bold">
          3
        </div>
        <h3 class="text-xl font-bold text-gray-900 mb-2">予約完了！</h3>
        <p class="text-gray-600">
          確認画面で内容をチェックして予約完了。お疲れさま！
        </p>
      </div>
    </div>

    <!-- CTA -->
    <div class="text-center mt-12">
      <%= link_to student_session_path, class: "inline-block bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold py-4 px-8 rounded-xl text-lg transition-all duration-300 transform hover:scale-105 shadow-lg hover:shadow-xl" do %>
      さっそく始めてみる 🚀
      <% end %>
    </div>
  </div>
</section>