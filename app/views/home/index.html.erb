<!-- ヒーローセクション -->
<section class="relative overflow-hidden bg-white">
  <!-- 背景動画 -->
  <video autoplay muted loop class="absolute inset-0 w-full h-full object-cover">
    <source src="/videos/quick-mendan-hero-video.mp4" type="video/mp4">
    <!-- フォールバック用背景画像 -->
    <div class="absolute inset-0 bg-cover bg-center bg-no-repeat" style="background-image: url('<%= asset_path("home/quick-mendan-hero.png") %>')"></div>
  </video>

  <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20 lg:py-32">
    <div class="text-center">
      <!-- テキスト背景ボックス -->
      <div class="p-6 lg:p-8 max-w-2xl mx-auto">
        <!-- メインタイトル -->
        <h1 class="text-4xl lg:text-6xl font-bold text-gray-800 mb-6">
          <span class="bg-gradient-to-r from-green-600 to-emerald-600 bg-clip-text text-transparent">
            Quick Mendan
          </span>
        </h1>

        <!-- サブタイトル -->
        <p class="text-xl lg:text-2xl text-gray-700 mb-8 max-w-3xl mx-auto" style="text-shadow: 1px 1px 0px white, -1px -1px 0px white, 1px -1px 0px white, -1px 1px 0px white, 1px 1px 2px rgba(0,0,0,0.2);">
          個人面談の予約が<span class="font-semibold text-green-600">簡単・スピーディー</span>に！<br>
          スマホでサクッと予約、変更もラクラク 📱✨
        </p>
      </div>
    </div>
  </div>
</section>

<!-- 使い方セクション -->
<section class="py-16 bg-gradient-to-br from-gray-50 to-blue-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- ログインボタン -->
    <div class="flex flex-col sm:flex-row gap-6 justify-center items-center mb-12">
      <%= link_to student_session_path, class: "bg-gradient-to-r from-green-500 to-emerald-500 hover:from-green-600 hover:to-emerald-600 text-white font-semibold py-6 px-10 rounded-xl text-xl border-2 border-green-500 hover:border-white transition-all duration-300 shadow-lg hover:shadow-xl flex items-center" do %>
      <%= image_tag "icons/student.png", class: "w-16 h-16 mr-4 rounded-full bg-white bg-opacity-20 p-2" %>
      生徒ログイン
      <% end %>
      <%= link_to staff_login_path, class: "bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-6 px-10 rounded-xl text-xl border-2 border-gray-200 hover:border-green-300 transition-all duration-300 flex items-center" do %>
      <%= image_tag "icons/teacher.png", class: "w-16 h-16 mr-4 rounded-full bg-green-100 p-2" %>
      講師ログイン
      <% end %>
    </div>

    <div class="text-center mb-12">
      <h2 class="text-3xl lg:text-4xl font-bold text-gray-800 mb-4">
        使い方はとっても簡単！
      </h2>
      <p class="text-lg text-gray-600">
        3ステップで面談予約完了 🎉
      </p>
    </div>

    <div class="grid md:grid-cols-3 gap-8">
      <!-- ステップ1 -->
      <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 text-center group">
        <!-- ステップ動画/画像 -->
        <div class="relative w-full h-48 overflow-hidden">
          <!-- 静止画像（デフォルト表示） -->
          <%= image_tag "steps/step1.png", class: "w-full h-48 object-cover transition-opacity duration-300 group-hover:opacity-0" %>
          <!-- 動画（ホバー時表示） -->
          <video class="absolute inset-0 w-full h-48 object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-300" muted loop data-step-video="1">
            <source src="/videos/steps/step1.mp4" type="video/mp4">
          </video>
        </div>
        <div class="p-6">
          <div class="w-16 h-16 bg-gradient-to-r from-green-400 to-emerald-400 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-xl font-bold shadow-lg -mt-8 relative z-10">
            1
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">生徒番号を入力</h3>
          <p class="text-gray-600 leading-relaxed">
            あなたの生徒番号とパスワードでログイン
          </p>
        </div>
      </div>

      <!-- ステップ2 -->
      <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 text-center group">
        <!-- ステップ動画/画像 -->
        <div class="relative w-full h-48 overflow-hidden">
          <!-- 静止画像（デフォルト表示） -->
          <%= image_tag "steps/step2.png", class: "w-full h-48 object-cover transition-opacity duration-300 group-hover:opacity-0" %>
          <!-- 動画（ホバー時表示） -->
          <video class="absolute inset-0 w-full h-48 object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-300" muted loop data-step-video="2">
            <source src="/videos/steps/step2.mp4" type="video/mp4">
          </video>
        </div>
        <div class="p-6">
          <div class="w-16 h-16 bg-gradient-to-r from-blue-400 to-cyan-400 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-xl font-bold shadow-lg -mt-8 relative z-10">
            2
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">日時を選択</h3>
          <p class="text-gray-600 leading-relaxed">
            空いてる時間から好きな日時を選んでクリック
          </p>
        </div>
      </div>

      <!-- ステップ3 -->
      <div class="bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300 text-center group">
        <!-- ステップ動画/画像 -->
        <div class="relative w-full h-48 overflow-hidden">
          <!-- 静止画像（デフォルト表示） -->
          <%= image_tag "steps/step3.png", class: "w-full h-48 object-cover transition-opacity duration-300 group-hover:opacity-0" %>
          <!-- 動画（ホバー時表示） -->
          <video class="absolute inset-0 w-full h-48 object-cover opacity-0 group-hover:opacity-100 transition-opacity duration-300" muted loop data-step-video="3">
            <source src="/videos/steps/step3.mp4" type="video/mp4">
          </video>
        </div>
        <div class="p-6">
          <div class="w-16 h-16 bg-gradient-to-r from-purple-400 to-pink-400 rounded-full flex items-center justify-center mx-auto mb-4 text-white text-xl font-bold shadow-lg -mt-8 relative z-10">
            3
          </div>
          <h3 class="text-xl font-bold text-gray-800 mb-3">予約完了！</h3>
          <p class="text-gray-600 leading-relaxed">
            内容をチェックして予約完了。お疲れさま！
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // 各ステップカードの動画制御
    const stepCards = document.querySelectorAll('.group');

    stepCards.forEach(card => {
      const video = card.querySelector('video[data-step-video]');

      if (video) {
        // ホバー開始時：動画再生
        card.addEventListener('mouseenter', function() {
          video.currentTime = 0; // 最初から再生
          video.play().catch(e => {
            console.log('Video play failed:', e);
          });
        });

        // ホバー終了時：動画停止・リセット
        card.addEventListener('mouseleave', function() {
          video.pause();
          video.currentTime = 0; // 最初に戻す
        });

        // 動画読み込み完了時の処理
        video.addEventListener('loadeddata', function() {
          video.currentTime = 0;
        });
      }
    });
  });
</script>